<?xml version="1.0" encoding="utf-8"?>

<widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "osg.myapp.photo"
        versionCode = "1"
        version     = "1.0.0"
>
    <!-- versionCode es un atributo opcional
		 y solo es utilizado por Android -->

    <name>Photo</name>

    <description>Photo</description>

    <author href="http://savne.net/" email="oscar.sanchez@savne.net">Oscar Sanchez</author>

    <gap:platform name="android" />
    <plugin spec="https://github.com/apache/cordova-plugin-inappbrowser" source="git"/>
    <plugin spec="https://github.com/apache/cordova-plugin-whitelist" source="git"/>
    <plugin spec="https://github.com/apache/cordova-plugin-camera" source="git"/>

    <preference name="orientation" value="default" />
    <preference name="fullscreen" value="true" />

    <icon src="images/icon.png" />


    <allow-navigation href="*" />
    <access origin="*" />
    <allow-intent href="*" />
    <allow-navigation href="*" subdomains="true" />

</widget>